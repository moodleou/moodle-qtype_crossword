{{!
    @template qtype_crossword/clue

    Data to generate crossword.

    Example context (json):
    {
      "number": "",
      "clue": "",
      "length": "",
      "value": "",
      "attributes": "id=q38:1_sub1",
      "feedbackimage": "",
      "title": "Title",
      "id": "q38:1_sub1",
      "orientation": 0,
      "startRow": 0,
      "startColumn": 0
    }
}}
<div class="col-12 wrap-clue" data-questionid="{{number}}" data-startrow="{{startRow}}"
    data-startcolumn="{{startColumn}}" data-length="{{length}}" data-orientation="{{orientation}}" data-clue="{{clue}}">
    <div class="d-flex my-2">
        <div class="clue-id"><span>{{number}}</span></div>
        <div class="clue-content">{{clue}} ({{length}})</div>
    </div>
    <label class="accesshide" for="{{id}}">{{#str}} wordno, qtype_crossword, {{number}} {{/str}}</label>
    <input
        type="text"
        class="control {{classes}}"
    {{attributes}}
        value="{{value}}"
        aria-label="{{title}}"
        disabled
        autocomplete="off"
        spellcheck="false">
    {{#feedbackimage}}
        {{{feedbackimage}}}
    {{/feedbackimage}}
</div>